
	<div class='col-xs-10 col-xs-offset-1 walk-box devise-form'>
		<h2>Sign in</h2>

	<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	  <div class="form-inputs">
	    <p><%= f.input :email, required: false, autofocus: true %></p>
	    <p><%= f.input :password, required: false %></p>
	    
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, "Sign in", :class => 'btn btn-primary-custom' %>
	  </div>
	<% end %>

	<p class='pull-right'><%= render "devise/shared/links" %></p>
	</div>

