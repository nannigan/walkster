<div class='col-xs-10 col-xs-offset-1 walk-box devise-form'>
<h2>Change your password</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <p><%= f.input :password, label: "New password", required: true, autofocus: true %></p>
    <p><%= f.input :password_confirmation, label: "Confirm your new password", required: true %></p>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Change my password", :class => 'btn btn-primary-custom' %>
  </div>
<% end %>

<p class='pull-right'><%= render "devise/shared/links" %></p>

</div>
